	НЗ = РеквизитФормыВЗначение("Доработки");
	НЗ.Отбор.Клиент.Использование = Истина;
	НЗ.Отбор.Клиент.Значение = ТекущийКлиент;
	НЗ.Прочитать();
	ЗначениеВРеквизитФормы(НЗ,"Доработки");
